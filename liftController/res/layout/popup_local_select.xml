<?xml version="1.0" encoding="utf-8"?>
<com.zhiitek.liftcontroller.views.percentlayout.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relay_operation"
        android:layout_width="match_parent"
        app:layout_heightPercent="18%"
        android:background="#FBFCFC"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:text="取消"
            android:textColor="#2C7ACF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="确定"
            android:textColor="#2C7ACF"
            android:textSize="17sp" />
    </RelativeLayout>

    <com.zhiitek.liftcontroller.views.wheelpicker.widget.WheelLocalPicker
        android:id="@+id/wdp_localpicker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relay_operation"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        app:wheel_text_maximum_height="中国湖北"
        app:wheel_text_maximum_width="中国湖北" />

</com.zhiitek.liftcontroller.views.percentlayout.PercentRelativeLayout>