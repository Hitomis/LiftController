<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_backgroud_color"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhiitek.liftcontroller.views.CustomFormCellView 
        android:id="@+id/black_box_old_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/module_backgroud_color"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:orientation="horizontal"
        app:header_layout_marginLeft="16dp"
        app:header_text="原密码"
        app:info_view_type="edittext"
        app:info_background="@null"
        >
        
    </com.zhiitek.liftcontroller.views.CustomFormCellView>
    
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dividing_deep_line_color" />
    
    <com.zhiitek.liftcontroller.views.CustomFormCellView 
        android:id="@+id/black_box_new_pwd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/module_backgroud_color"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:orientation="horizontal"
        app:header_layout_marginLeft="16dp"
        app:header_text="新密码"
        app:info_view_type="edittext"
        app:info_background="@null"
        >
        
    </com.zhiitek.liftcontroller.views.CustomFormCellView>
    
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dividing_deep_line_color" />
    
    <com.zhiitek.liftcontroller.views.CustomFormCellView 
        android:id="@+id/black_box_new_pwd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/module_backgroud_color"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:orientation="horizontal"
        app:header_layout_marginLeft="16dp"
        app:header_text="确认密码"
        app:info_view_type="edittext"
        app:info_background="@null"
        >
        
    </com.zhiitek.liftcontroller.views.CustomFormCellView>
    
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dividing_deep_line_color" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="密码要求为9位以下的纯数字"
        android:textSize="12sp"
        android:textColor="@color/cpb_red" />
    
    <Button 
        android:id="@+id/btn_change_black_box_pwd"
        android:text="暂未支持该功能"
        android:textColor="@color/cpb_white"
        android:textSize="16sp"
        android:enabled="false"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_simple_background"/>

</LinearLayout>