<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_backgroud_color"
    android:orientation="vertical" >
    
    <com.zhiitek.liftcontroller.views.CustomFormCellView 
        android:id="@+id/black_box_datasetup_chooseconfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn_selector"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:orientation="horizontal"
        app:header_layout_weight="0"
        app:info_layout_weight="1"
        app:info_view_type="textview"
        app:info_layout_marginLeft="8dp"
        app:info_text="选择配置项">
    </com.zhiitek.liftcontroller.views.CustomFormCellView>
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dividing_deep_line_color" />
    
    <com.zhiitek.liftcontroller.views.CustomFormCellView 
        android:id="@+id/black_box_datasetup_saveconfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn_selector"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:orientation="horizontal"
        app:header_layout_weight="0"
        app:info_view_type="textview"
        app:info_layout_weight="1"
        app:info_layout_marginLeft="8dp"
        app:info_text="保存配置">
    </com.zhiitek.liftcontroller.views.CustomFormCellView>
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dividing_deep_line_color" />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/ll_data_setup_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</LinearLayout>