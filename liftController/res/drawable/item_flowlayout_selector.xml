<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed ="true"> <!-- 控件按下状态时 -->
        <shape android:shape ="rectangle">  <!-- 指定形状为矩形-->
            <solid android:color="@color/text_selected_color" />
            <corners android:radius ="5dp" /> <!-- 指定矩形角度弧度为25dp(圆角矩形)-->
        	<padding android:bottom="2dp" android:left="10dp" android:right="10dp" android:top="2dp" />
        </shape >
    </item >
   
    <item android:state_focused ="true">
        <shape android:shape ="rectangle">
            <corners android:radius ="5dp" />
            <solid android:color="@color/text_selected_color" />
            <padding android:bottom="2dp" android:left="10dp" android:right="10dp" android:top="2dp" />
        </shape >
    </item >
   
    <item >
        <shape android:shape ="rectangle">
            <corners android:radius ="5dp" />
            <solid android:color="#99CCFF" />
            <padding android:bottom="2dp" android:left="10dp" android:right="10dp" android:top="2dp" />
        </shape >
    </item >
</selector>
