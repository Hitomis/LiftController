<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 百分比布局自定义属性 -->
    <declare-styleable name="PercentLayout_Layout">
        <attr name="layout_widthPercent" format="fraction" />
        <attr name="layout_heightPercent" format="fraction" />
        <attr name="layout_marginPercent" format="fraction" />
        <attr name="layout_marginLeftPercent" format="fraction" />
        <attr name="layout_marginTopPercent" format="fraction" />
        <attr name="layout_marginRightPercent" format="fraction" />
        <attr name="layout_marginBottomPercent" format="fraction" />
        <attr name="layout_marginStartPercent" format="fraction" />
        <attr name="layout_marginEndPercent" format="fraction" />
    </declare-styleable>

    <attr name="item_count" format="integer"></attr>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="item_count" />
    </declare-styleable>

    <!-- simpleSlidingMenu自定义属性 -->
    <declare-styleable name="SimpleSlidingMenu">
        <attr name="menu_background" format="reference" /> <!-- 菜单View背景图片 -->
    </declare-styleable>

    <!-- CustomFormCellView -->
    <declare-styleable name="CustomFormCellView">
        <attr name="header_layout_marginLeft" format="dimension" />
        <attr name="header_layout_weight" format="float" />
        <attr name="header_text" format="string" />
        <attr name="header_text_color" format="color" />
        <attr name="header_text_size" format="dimension" />
        <attr name="info_view_type">
            <flag name="textview" value="0" />
            <flag name="edittext" value="1" />
            <flag name="togglebutton" value="2"/>
        </attr>
        <attr name="info_background" format="reference" />
        <attr name="info_layout_marginLeft" format="dimension" />
        <attr name="info_layout_weight" format="float" />
        <attr name="info_text" format="string" />
        <attr name="info_text_color" format="color" />
        <attr name="info_text_size" format="dimension" />
        <attr name="info_gravity">
            <flag name="center" value="17" />
            <flag name="center_vertical" value="16" />
            <flag name="center_horizontal" value="1" />
        </attr>
    </declare-styleable>
    
    <!-- WheelPicker -->
    <declare-styleable name="WheelPicker">
        <attr name="wheel_data" format="reference" />
        <attr name="wheel_style" format="enum">
            <enum name="straight" value="0" />
            <enum name="curved" value="1" />
        </attr>
        <attr name="wheel_direction" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="wheel_item_index" format="integer" />
        <attr name="wheel_item_index_width_maximum" format="integer" />
        <attr name="wheel_item_index_height_maximum" format="integer" />
        <attr name="wheel_item_same_size" format="boolean" />
        <attr name="wheel_item_count" format="integer" />
        <attr name="wheel_item_space" format="dimension" />
        <attr name="wheel_text_size" format="dimension" />
        <attr name="wheel_text_maximum_width" format="string" />
        <attr name="wheel_text_maximum_height" format="string" />
        <attr name="wheel_text_color" format="color" />
    </declare-styleable>

    <!-- WaterStretchView 自定义属性 -->
    <declare-styleable name="WaterStretchView">
        <attr name="max_circle_radius" format="dimension"/>
        <attr name="min_circle_radius" format="dimension"/>
        <attr name="waterstretch_fill_color" format="color"/>
        <attr name="waterstretch_stroke_color" format="color"/>
    </declare-styleable>

</resources>